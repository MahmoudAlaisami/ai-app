generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              Int              @id @default(autoincrement())
  email           String           @unique
  password        String
  firstName       String
  lastName        String
  gender          String?
  birthDay        String?
  auths           Auth[]
  Chat            Chat[]

  
}

model Auth {
  id     Int    @id @default(autoincrement())
  userId Int
  token  String
  user   User   @relation(fields: [userId], references: [id])

  
}


model Chat {
  id             Int           @id @default(autoincrement())
  userId         Int
  title          String
  queries        Query[]
  createdAt      DateTime      @default(now())
  user           User          @relation(fields: [userId], references: [id])

  
}

model Query {
  id       Int    @id @default(autoincrement())
  chatId   Int
  request  String
  response String
  chat     Chat   @relation(fields: [chatId], references: [id])
  
}
